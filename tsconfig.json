{
  "compilerOptions": {
    "declaration": true,
       "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
